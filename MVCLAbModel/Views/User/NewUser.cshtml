@model CandyShop.Models.UserVM
@using CandyShop.Models

@{
    ViewBag.Title = "NewUser";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<h1 style="color:chocolate; font-family:'Bookman Old Style'">New User</h1>

<form action="AddUser" method="post">
    <table>
        @*here is where we insert the info about our new user*@
        <tr>
            <td style="font-family:Elephant">First Name</td>
            <td>@Html.TextBoxFor(m=>m.User.FirstName) @Html.ValidationMessageFor(x=>x.User.FirstName)</td>
        </tr>
        <tr>
            <td style="font-family:Elephant">Last Name</td>
            <td>@Html.TextBoxFor(m => m.User.LastName)@Html.ValidationMessageFor(x => x.User.LastName)</td>
        </tr>
        <tr>
            <td style="font-family:Elephant">ID</td>
            <td>@Html.TextBoxFor(m => m.User.ID)@Html.ValidationMessageFor(x => x.User.ID)</td>
        </tr>
        <tr>
            <td style="font-family:Elephant">Password</td>
            <td>@Html.PasswordFor(m => m.User.Password)@Html.ValidationMessageFor(x => x.User.Password)</td>
        </tr>
    </table>
    <input class="btn btn-warning" id="Submit1" type="submit" value="Add User" />
   @if (ViewBag.TheResult == true)
       //here is where we check if such user exists, if he is we will show a popup
   { <div class="alert alert-warning fade in collapse" role="alert" id="userIDexists" data-dismiss="alert">
        <button id="bnewuser" type="button" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>Oh No!</strong> We already have a user with this ID!
    </div>
   }
</form>

