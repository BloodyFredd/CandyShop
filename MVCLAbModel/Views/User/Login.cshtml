@model CandyShop.Models.User

<div id="BootstrapErrorMessage" runat="server">
</div>

<h1 style="color:chocolate; font-family:'Bookman Old Style'">Login</h1>
<div>
    @*here is where we activate the signin action*@ 
    <form action="Signin" method="post">
        <input class="form-control" style="font-family:Elephant" id="Text1" name="ID" type="text" placeholder="Enter ID"/>
        <input class="form-control" style="font-family:Elephant" id="Password1" name="Password" type="Password" placeholder="Enter Password"/>
        <input class="btn btn-warning" style="font-family:Elephant" id="Submit1" type="submit" value="Log In" />
    </form>
</div>
@*here is where we check if such a user exist, if not a popup will be shown*@
@if (ViewBag.TheResult == true)
{
<div class="alert alert-warning fade in collapse" role="alert" id="userIDexists" data-dismiss="alert">
    <button id="bnewuser" type="button" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <strong>Holy guacamole!</strong> The Id or the password doesn't match the ones we have in our database!
</div>
}


